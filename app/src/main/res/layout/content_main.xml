<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/toggleBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:onClick="onToggleBtnClicked" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="x: "
        android:id="@+id/xText"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/toggleBtn"
        android:layout_alignLeft="@+id/toggleBtn"
        android:layout_alignStart="@+id/toggleBtn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="y: "
        android:id="@+id/yText"
        android:layout_below="@+id/xText"
        android:layout_alignLeft="@+id/xText"
        android:layout_alignStart="@+id/xText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="z: "
        android:id="@+id/zText"
        android:layout_below="@+id/yText"
        android:layout_alignLeft="@+id/yText"
        android:layout_alignStart="@+id/yText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Berdiri"
        android:id="@+id/berdiriBtn"
        android:onClick="onBerdiriBtnClicked"
        android:layout_below="@+id/zText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="82dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DUDUK"
        android:id="@+id/dudukBtn"
        android:onClick="onDudukBtnClicked"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/berdiriBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/statusText"
        android:text="Status: "
        android:layout_below="@+id/berdiriBtn"
        android:layout_alignLeft="@+id/detectBtn"
        android:layout_alignStart="@+id/detectBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DETEKSI"
        android:id="@+id/detectBtn"
        android:layout_alignTop="@+id/dudukBtn"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read File"
        android:id="@+id/readBtn"
        android:layout_alignBottom="@+id/berdiriBtn"
        android:layout_toRightOf="@+id/xText"
        android:layout_toEndOf="@+id/xText"
        android:onClick="onReadBtnClicked" />


</RelativeLayout>
